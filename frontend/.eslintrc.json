{
    "env": {
        "browser": true,
        "es2021": true
    },
    "plugins": ["prettier"],
    "extends": ["eslint:recommended", "plugin:prettier/recommended"],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "prettier/prettier": "error",
        "no-global-assign": ["error", {"exceptions": ["Object"]}]
    },
    "ignorePatterns": ["node_modules/"],
    "globals": {
        "server": true,
        "networkList" : true,
        "global": true,
        "lookUpTable": true,
        "policyTable": true
      }
}
